{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      // avoid issue when importing auto-generated css/scss typings (https://github.com/Microsoft/TypeScript-React-Starter/issues/8)
      "allowSyntheticDefaultImports": true
    }
  }
  